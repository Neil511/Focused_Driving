<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<Spinner
		android:id="@+id/muses_spinner"
		android:layout_width="match_parent"
		android:layout_height="60dp" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/refresh"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/refresh" />
	    <Button
	        android:id="@+id/connect"
	        android:layout_width="100dp"
	        android:layout_height="40dp"
	        android:text="@string/connect" />
	    <Button
	        android:id="@+id/disconnect"
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:text="@string/disconnect" />
	</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="31dp"
		android:textSize="16sp"
		android:text="@string/status" />

	<TextView
		android:id="@+id/con_status"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:textSize="16sp"
		android:text="@string/undefined" />
	<TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
		android:textSize="16sp"
        android:text="@string/eeg"
		android:id="@+id/eeg" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/eeg_tp9"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="@string/init_val" />
        <TextView
            android:id="@+id/eeg_fp1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="@string/init_val" />
        <TextView
            android:id="@+id/eeg_fp2"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="@string/init_val" />
        <TextView
            android:id="@+id/eeg_tp10"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="@string/init_val" />
    </LinearLayout>

	<TextView
   		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:textSize="16sp"
    	android:text="@string/accel"
		android:id="@+id/accel" />
    	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal"
			android:weightSum="1">
	        <TextView
	            android:id="@+id/acc_x"
		        android:layout_width="63dp"
		        android:layout_height="match_parent"
				android:textSize="16sp"
		        android:text="@string/init_val" />

			<TextView
	            android:id="@+id/acc_y"
		        android:layout_width="67dp"
		        android:layout_height="match_parent"
				android:textSize="16sp"
		        android:text="@string/init_val" />
	        <TextView
	            android:id="@+id/acc_z"
		        android:layout_width="72dp"
		        android:layout_height="match_parent"
				android:textSize="16sp"
		        android:text="@string/init_val" />

			<EditText
				android:layout_width="58dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:ems="10"
				android:id="@+id/acc_x_init"
				android:text="0.0" />

			<EditText
				android:layout_width="59dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:ems="10"
				android:id="@+id/acc_y_init"
				android:text="0.0" />

			<EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/acc_z_init"
				android:layout_weight="1"
				android:text="0.0" />

		</LinearLayout>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editText11"
		android:layout_gravity="center_horizontal"
		android:text="Gamma_Absolute:" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:weightSum="1">

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gAbsolute4"
			android:text="0.0"
			android:layout_weight="0.19" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gAbsolute1"
			android:text="0.0"
			android:layout_weight="0.31" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gAbsolute2"
			android:text="0.0"
			android:layout_weight="0.30" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gAbsolute3"
			android:text="0.0"
			android:layout_weight="0.30" />
	</LinearLayout>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editText"
		android:layout_gravity="center_horizontal"
		android:text="Gamma_Relative:" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:weightSum="1">

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gRelative4"
			android:text="0.0"
			android:layout_weight="0.21" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gRelative1"
			android:text="0.0"
			android:layout_weight="0.35" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gRelative2"
			android:text="0.0"
			android:layout_weight="0.30" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/gRelative3"
			android:text="0.0"
			android:layout_weight="0.21" />
	</LinearLayout>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editText6"
		android:layout_gravity="center_horizontal"
		android:text="Alpha_Absolute:" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:weightSum="1">

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/aAbsolute4"
			android:text="0.0"
			android:layout_weight="0.27" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/aAbsolute1"
			android:text="0.0"
			android:layout_weight="0.53" />

		<EditText
			android:layout_width="58dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/aAbsolute2"
			android:text="0.0"
			android:layout_weight="0.34" />

		<EditText
			android:layout_width="104dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/aAbsolute3"
			android:text="0.0" />
	</LinearLayout>

	<TextView
	   		android:layout_width="match_parent"
	    	android:layout_height="35dp"
		android:textSize="16sp"
	    	android:text="Alpha_Relative:"
			 android:id="@+id/muse_elem" />
   		<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="38dp"
			android:orientation="horizontal" >

			<TextView
                android:id="@+id/aRelative4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/init_val" />

			<TextView
	            android:id="@+id/aRelative1"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:text="@string/init_val" />
	        <TextView
	            android:id="@+id/aRelative2"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:text="@string/init_val" />
	        <TextView
	            android:id="@+id/aRelative3"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:text="@string/init_val" />
		</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:textSize="16sp"
		android:text="@string/version" />
	<TextView
		android:id="@+id/version"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:textSize="16sp"
		android:text="@string/undefined" />
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:orientation="horizontal" >
	        <Button
	            android:id="@+id/pause"
	            android:layout_width="150dp"
	            android:layout_height="40dp"
	            android:text="@string/pause" />

			<Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initialize"
                android:id="@+id/Init" />
		</LinearLayout>

</LinearLayout>
</ScrollView>